<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.Dream11.Winning.tips.MainActivity"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CRICKET MATCHES"
        android:textColor="#000000"
        android:textSize="20sp"
        android:paddingTop="10dp"
        android:paddingLeft="20dp"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="45dp"
        android:layout_marginLeft="1dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button1"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MATCH 1"
            android:textColor="#000000"
            android:onClick="button1"/>

        <Button
            android:id="@+id/button2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="button2"
            android:text="MATCH 2"
            android:textColor="#000000"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="22dp"/>

        <Button
            android:id="@+id/button3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MATCH 3"
            android:textColor="#000000"
            android:onClick="button3"
            android:layout_marginLeft="25dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/button4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="105dp"
            android:text="MATCH 4"
            android:textColor="#000000"
            android:onClick="button4"/>

        <Button
            android:id="@+id/button5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MATCH 5"
            android:onClick="button5"
            android:textColor="#000000"
            android:layout_marginTop="105dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="22dp"/>

        <Button
            android:id="@+id/button6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="105dp"
            android:text="MATCH 6"
            android:textColor="#000000"
            android:onClick="button6"
            android:layout_marginLeft="25dp"/>
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="FOOTBALL MATCHES"
        android:textColor="#000000"
        android:textSize="20sp"
        android:paddingTop="175dp"
        android:paddingLeft="20dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="50dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="1dp"
        android:orientation="horizontal">

        <Button
            android:layout_marginTop="155dp"
            android:id="@+id/button7"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MATCH 1"
            android:textColor="#000000"
            android:onClick="button7"/>

        <Button
            android:id="@+id/button8"
            android:layout_marginTop="155dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MATCH 2"
            android:textColor="#000000"
            android:onClick="button8"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="22dp"/>

        <Button
            android:id="@+id/button9"
            android:layout_marginTop="155dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MATCH 3"
            android:textColor="#000000"
            android:onClick="button9"
            android:layout_marginLeft="25dp"/>
    </LinearLayout>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="KABBADI MATCHES"
        android:textSize="20sp"
        android:textColor="#000000"
        android:paddingTop="275dp"
        android:paddingLeft="20dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="50dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="1dp"
        android:orientation="horizontal">

        <Button
            android:layout_marginTop="255dp"
            android:id="@+id/button10"
            android:onClick="button10"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="10dp"
            android:textColor="#000000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MATCH 1"/>

        <Button
            android:id="@+id/button11"
            android:layout_marginTop="255dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MATCH 2"
            android:textColor="#000000"
            android:onClick="button11"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="22dp"/>

        <Button
            android:id="@+id/button12"
            android:layout_marginTop="255dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MATCH 3"
            android:textColor="#000000"
            android:onClick="button12"
            android:layout_marginLeft="25dp"/>
    </LinearLayout>
    <Button
        android:id="@+id/support"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SUPPORT"
        android:onClick="support"
        android:textColor="#000000"
        android:layout_marginLeft="140dp"
        android:layout_marginTop="400dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="KEEP PLAYING!  KEEP WINNING!"
        android:textSize="20sp"
        android:paddingTop="475dp"
        android:paddingLeft="3dp"
        android:textColor="#000000"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />
    <com.google.android.gms.ads.AdView
        android:id="@+id/adView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        ads:adSize="BANNER"
        ads:adUnitId="@string/banner_ad_unit_id">
    </com.google.android.gms.ads.AdView>
</RelativeLayout>